---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = '競馬予想サイトの口コミ・評判を集約。ユーザーの生の声で信頼できるサイトを見つけよう。',
  ogImage = '/og/default.png',
} = Astro.props;

const siteTitle = '競馬予想サイト口コミ';
const fullTitle = title === 'トップ' ? siteTitle : `${title} | ${siteTitle}`;
const siteUrl = import.meta.env.SITE_URL || 'https://keiba-review.com';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl);
const ogImageUrl = ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage}`;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- OGP -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content={siteTitle} />
    <meta property="og:locale" content="ja_JP" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <title>{fullTitle}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
      <div class="max-w-6xl mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-bold text-gray-900 hover:text-gray-700">
            競馬予想サイト口コミ
          </a>
          <nav class="hidden md:flex items-center space-x-6">
            <a href="/keiba-yosou/" class="text-gray-600 hover:text-gray-900">
              サイト一覧
            </a>
            <a href="/keiba-yosou/nankan/" class="text-gray-600 hover:text-gray-900">
              NANKAN
            </a>
            <a href="/keiba-yosou/chuo/" class="text-gray-600 hover:text-gray-900">
              中央競馬
            </a>
            <a href="/keiba-yosou/chihou/" class="text-gray-600 hover:text-gray-900">
              地方競馬
            </a>
          </nav>
          <!-- Mobile menu button -->
          <button
            type="button"
            class="md:hidden p-2 text-gray-600"
            id="mobile-menu-button"
            aria-label="メニュー"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        <!-- Mobile menu -->
        <nav class="hidden md:hidden mt-4 pb-2" id="mobile-menu">
          <div class="flex flex-col space-y-2">
            <a href="/keiba-yosou/" class="text-gray-600 hover:text-gray-900 py-2">
              サイト一覧
            </a>
            <a href="/keiba-yosou/nankan/" class="text-gray-600 hover:text-gray-900 py-2">
              NANKAN
            </a>
            <a href="/keiba-yosou/chuo/" class="text-gray-600 hover:text-gray-900 py-2">
              中央競馬
            </a>
            <a href="/keiba-yosou/chihou/" class="text-gray-600 hover:text-gray-900 py-2">
              地方競馬
            </a>
          </div>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-gray-300 mt-auto">
      <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-white font-bold mb-4">競馬予想サイト口コミ</h3>
            <p class="text-sm">
              ユーザーの生の声を集めた競馬予想サイトの口コミプラットフォーム。
              信頼できるサイト選びをサポートします。
            </p>
          </div>
          <div>
            <h3 class="text-white font-bold mb-4">カテゴリ</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="/keiba-yosou/nankan/" class="hover:text-white">NANKAN（南関）</a></li>
              <li><a href="/keiba-yosou/chuo/" class="hover:text-white">中央競馬</a></li>
              <li><a href="/keiba-yosou/chihou/" class="hover:text-white">地方競馬</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-white font-bold mb-4">リンク</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="/about/" class="hover:text-white">当サイトについて</a></li>
              <li><a href="/terms/" class="hover:text-white">利用規約</a></li>
              <li><a href="/privacy/" class="hover:text-white">プライバシーポリシー</a></li>
              <li><a href="/contact/" class="hover:text-white">お問い合わせ</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-gray-700 mt-8 pt-8 text-center text-sm">
          <p>&copy; {new Date().getFullYear()} 競馬予想サイト口コミ. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const menuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      menuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
