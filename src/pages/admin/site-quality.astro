---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SiteQualityManager from '../../components/SiteQualityManager';

const AIRTABLE_API_KEY = import.meta.env.AIRTABLE_API_KEY;
const AIRTABLE_BASE_ID = import.meta.env.AIRTABLE_BASE_ID;

if (!AIRTABLE_API_KEY || !AIRTABLE_BASE_ID) {
  return new Response('Airtable credentials not configured', { status: 500 });
}

const API_URL = `https://api.airtable.com/v0/${AIRTABLE_BASE_ID}`;

// 承認済みサイトを全件取得
let allSites = [];
let offset = null;

do {
  const url = offset
    ? `${API_URL}/Sites?filterByFormula={IsApproved}=TRUE()&offset=${offset}`
    : `${API_URL}/Sites?filterByFormula={IsApproved}=TRUE()`;

  const response = await fetch(url, {
    headers: {
      Authorization: `Bearer ${AIRTABLE_API_KEY}`,
    },
  });

  if (!response.ok) {
    console.error('Failed to fetch sites from Airtable');
    return new Response('Failed to fetch sites', { status: 500 });
  }

  const data = await response.json();
  allSites = allSites.concat(data.records);
  offset = data.offset;
} while (offset);

// サイトデータを整形
const sites = allSites.map(record => ({
  id: record.id,
  name: record.fields.Name || '',
  slug: record.fields.Slug || '',
  category: record.fields.Category || 'other',
  siteQuality: record.fields.SiteQuality || 'normal',
  displayPriority: record.fields.DisplayPriority || 50,
  url: record.fields.URL || '',
}));

// 品質別に分類
const excellent = sites.filter(s => s.siteQuality === 'excellent');
const normal = sites.filter(s => s.siteQuality === 'normal');
const malicious = sites.filter(s => s.siteQuality === 'malicious');
---

<BaseLayout title="サイト品質管理" description="サイトの品質を管理し、表示優先度を設定できます。">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">サイト品質管理</h1>
      <p class="text-gray-600">
        サイトの品質を管理し、表示優先度を設定できます。
      </p>
    </div>

    <!-- 統計情報 -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-green-50 border border-green-200 rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-green-600">優良サイト</p>
            <p class="text-3xl font-bold text-green-900">{excellent.length}</p>
          </div>
          <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">通常サイト</p>
            <p class="text-3xl font-bold text-gray-900">{normal.length}</p>
          </div>
          <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-red-50 border border-red-200 rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-red-600">悪質サイト</p>
            <p class="text-3xl font-bold text-red-900">{malicious.length}</p>
          </div>
          <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- サイト品質管理コンポーネント -->
    <SiteQualityManager client:load sites={sites} />
  </div>
</BaseLayout>
